
public class ControlFlowPractice {

	//calculates the cost based on the distance given
	public double calculateCost(double distance){
		if(distance >= 50 && distance <= 100){
			return 100.0;
		}
		else if(distance >= 25 && distance < 50){
			return 50.0;
		}
		else if(distance >= 0 && distance < 25){
			return 10.0;
		}
		else{
			return 0.0;
		}
	}
	
	//prints the value depending on the value given
	public int rollDice(int value){
		int result = 0;
		switch(value){
		case 1:
			result = 1;
			break;
		case 2:
			result = 2;
			break;
		case 3:
			result = 3;
			break;
		case 4:
			result = 4;
			break;
		case 5:
			result = 5;
			break;
		case 6:
			result = 6;
			break;
		default:
			result = 0;
			break;		
		}
		return result;
	}
	
	public int findLetter(String letter, String word){
		//letter  = "O"
		//word = "Hello World"
		//count == 1
		int count = 0;
		
		for(int i = 0; i < word.length(); i++){
			
			if(word.substring(i, i+1).equals(letter)){
				if(count == 1){
					return i;
				}
				else{
					count++;
				}
			}
		}
		return 0;
	}
	
	
	
	
	
	
}
