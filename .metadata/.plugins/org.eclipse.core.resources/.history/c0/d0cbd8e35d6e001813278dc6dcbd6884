
public class ControlFlowPractice {

	//calculates the cost based on the distance given
	public double calculateCost(double distance){
		if(distance >= 50){
			return 100.0;
		}
		else if(distance >= 25 && distance < 50){
			return 50.0;
		}
		else if(distance >= 0 && distance < 25){
			return 10.0;
		}
		else{
			return 0.0;
		}
	}
	
	public void rollDice(int value){
		switch(value){
		case 1:
			System.out.println("The value rolled is : " + value);
			break;
		case 2:
			System.out.println("The value rolled is : " + value);
			break;
		case 3:
			System.out.println("The value rolled is : " + value);
			break;
		case 4:
			System.out.println("The value rolled is : " + value);
			break;
		case 5:
			System.out.println("The value rolled is : " + value);
			break;
		case 6:
			System.out.println("The value rolled is : " + value);
			break;
		default:
			System.out.println("Not a valid roll");
		}
	}
	
	public String findLetter(int index, String word){
		String letter = "";
		for(int i = 0; i < index; i++){
			letter = word.substring(i, i+1);
		}
		return letter;
	}
	
	
}
